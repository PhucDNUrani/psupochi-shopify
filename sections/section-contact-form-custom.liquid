                        </svg>
                      </span>
                      <a href="https://www.post.japanpost.jp/zipcode/" target="_blank">郵便番号検索</a>
                    </span>
                  </span>
                  {% render 'address-jp' %}
                  <input
                    type="{{ block.type }}"
                    id="contact_address_addr01"
                    class="full-input"
                    name="contact[addr01]"
                    {% if section.settings.show_placeholder %}
                      placeholder="{%- if block.settings.placeholder_addr01 != empty -%}{{ block.settings.placeholder_addr01 }}{%- else -%}{{ block.settings.title }}{%- endif -%}"
                    {% endif %}
                    {% if block.settings.required %}
                      required
                    {% endif %}
                  >
                  <input
                    type="{{ block.type }}"
                    id="contact_address_addr02"
                    class="full-input"
                    name="contact[addr02]"
                    {% if section.settings.show_placeholder %}
                      placeholder="{%- if block.settings.placeholder_addr02 != empty -%}{{ block.settings.placeholder_addr02 }}{%- else -%}{{ block.settings.title }}{%- endif -%}"
                    {% endif %}
                    {% if block.settings.required %}
                      required
                    {% endif %}
                  >
                </span>
              </p>
            {%- endif -%}
          {%- endif -%}
        {%- endfor -%}
      </div>
      {%- liquid
        assign button_color = section.settings.button_style | split: ' ' | first
        assign button_style = section.settings.button_style | split: ' ' | last
      -%}
      <p class="submit m0 {% if center %}text-center{% else %}text-end{% endif %}">
        <button type="submit" class="overlay-{{ button_color }}{% if button_style == 'inv' %} inv{% endif %}{% if section.settings.custom_button %} custom-button{% endif %}">
          確認ページへ
        </button>
      </p>
    {%- endif -%}
  </fieldset>
{%- endform -%}

<style>
  #shopify-section-{{ section.id }} { position: relative; z-index: {{ section.settings.fix_zindex }}!important; }
  #shopify-section-{{ section.id }} .f8cm { margin-bottom: {{ section.settings.spacing_desktop }}px; }
  @media only screen and (max-width: 47.5em) {
    #shopify-section-{{ section.id }} .f8cm { margin-bottom: {{ section.settings.spacing_mobile }}px; }
  }
  .cols {
    flex-direction: column;
  }
  .form-row {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    border-top: 1px dotted #ccc;
    padding: 15px 0 4px;
  }
  form fieldset > .submit {
    border-top: 1px dotted #ccc;
    padding-top: 15px;
  }
  .submit > .custom-button {
    --secondary_bg_btn: #DE5D50;
    user-select: none;
    padding: 10px 16px;
    color: #fff;
    font-size: 16px;
    width: 33.3333%;
    height: 56px;
    line-height: 56px;
    padding-top: 0;
    padding-bottom: 0;
    font-weight: bold;
  }
  .submit > .custom-button:hover {
    --secondary_bg_btn_dark: #bd4f44;
  }
  .submit > .custom-button::before {
    border-radius: 0;
  }
  .form-row label {
    flex: 0 0 30%;
    padding-top: 14px;
  }
  .form-row > span.last-child,
  .form-row > textarea,
  .form-row > input {
    flex: 0 0 70%;
  }
  .form-row > span.invalid-feedback {
    flex: 0 0 70%;
    margin-left: 30%;
  }
  .form-row > textarea {
    height: 15px;
    min-height: 100px;
  }
  .form-row input.half-input {
    display: inline-block;
    width: 45%;
  }
  .form-row input.tel-input {
    width: 168px;
  }
  .postcode-input input.full-input {
    margin-top: 1.6rem;
  }
  .postcode-input select {
    width: 30%;
  }
  .postcode-group {
    display: inline-block;
    margin-bottom: 1.6rem;
  }
  .postcode-group .postcode-sign {
    display: inline-block;
    padding: 0 5px 0 3px;
    margin-left: 5px;
  }
  .postcode-help {
    display: inline-block;
    margin-left: 10px;
    /* margin-bottom: 16px; */
    vertical-align: baseline;
    /* line-height: 0; */
  }

  span.help-icon {
    cursor: help;
    display: inline-block;
    margin-top: -10px;
    width: 20px;
    height: 20px;
    background: #525263;
    border-radius: 50%;
    font-size: 13px;
    position: relative;
    top: 2px;
  }
  .help-icon svg {
    width: 1em;
    height: 1em;
    position: relative;
    left: 3px;
    top: -4px;
  }
  .overlay-theme {
    font-size: 12px;
    color: #DE5D50;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const inputKanji01 = document.getElementById('{{ type_name.settings.input_name_1 }}');
    const inputKanji02 = document.getElementById('{{ type_name.settings.input_name_2 }}');
    const emailId = document.getElementById('{{ type_email.settings.email_id }}');
    const textAreaId = document.getElementById('{{ type_text_area.settings.textarea_id }}');

    inputKanji01.addEventListener('input', function() {
      inputKanji01.setCustomValidity('');
    });

    inputKanji02.addEventListener('input', function() {
      inputKanji02.setCustomValidity('');
    });

    emailId.addEventListener('input', function() {
      emailId.setCustomValidity('');
    });

    textAreaId.addEventListener('input', function() {
      textAreaId.setCustomValidity('');
    });

    inputKanji01.addEventListener('invalid', function(event) {
      if (inputKanji01.validity.valueMissing) {
        inputKanji01.setCustomValidity('姓を入力してください。');
      }
    });

    inputKanji02.addEventListener('invalid', function(event) {
      if (inputKanji02.validity.valueMissing) {
        inputKanji02.setCustomValidity('姓を入力してください。');
      }
    });

    emailId.addEventListener('invalid', function(event) {
      if (emailId.validity.valueMissing) {
        emailId.setCustomValidity('メールアドレスを入力してください。');
      } else if (emailId.validity.typeMismatch) {
        emailId.setCustomValidity(`メールアドレスには「@」を含めふくめてください。 「${emailId.value}」には「@」がありません。`);
      }
    });

    textAreaId.addEventListener('invalid', function(event) {
      if (textAreaId.validity.valueMissing) {
        textAreaId.setCustomValidity('姓を入力してください。');
      }
    });
  });
</script>

{% schema %}
{
