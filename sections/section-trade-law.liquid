<section>
  <div class="section-title">
    <h1>{{ page.title }}</h1>
  </div>
  <div class="law-section {% if section.settings.check_page == 'custom' %}custom-section{% endif %}">
    {% for block in section.blocks %}
      <div class="law-row" {{ block.shopify_attributes }}>
        <div class="left-content">
          {% comment %} {{ block.settings.left_text }} {% endcomment %}
          <span>{{ block.settings.left_text | replace: '</p><span>', '<br>' | remove: '<p>' | remove: '</p>'}}</span>
        </div>
        <div class="right-content">
          {% if block.settings.right_image != blank %}
            {{
              block.settings.right_image
              | image_url: width: 300
              | image_tag: loading: 'lazy', alt: block.settings.left_text
            }}
          {% endif %}
          <span>{{ block.settings.right_text | replace: '</p><span>', '<br>' | remove: '<p>' | remove: '</p>'}}</span>
        </div>
      </div>
    {% endfor %}
  </div>
</section>

<style>
  .section-title {
    padding: 10px 16px 48px;
  }
  .section-title h1 {
    margin-top: 10px;
    text-align: center;
    border-bottom: 1px solid #ccc;
    padding: 8px;
    font-size: 32px;
    font-weight: bold;
  }
  .law-section {
    max-width: 908px;
    margin: 0 auto;
    border-top: 1px dotted #ccc;
  }
  .law-row {
    display: flex;
    justify-content: space-between;
    flex-wrap: nowrap;
    border-bottom: 1px dotted #ccc;
    padding: 15px 0 4px;
  }
  .left-content {
    font-weight: bold;
    width: 30%;
    padding-top: 14px;
  }
  .right-content {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    width: 70%;
  }
  .right-content span {
    line-height: 41.4px;
  }
  .right-content img {
    max-width: 100%;
    height: auto;
  }
  /* For page Inquiry Information */
  .custom-section .left-content {
    padding-top: 0;
  }
  .custom-section .left-content span,
  .custom-section .right-content span {
    line-height: 22px;
  }
  .custom-section .right-content {
    justify-content: center;
  }
  .custom-section .law-row {
    padding-top: 9px;
  }
</style>

{% schema %}
{
  "name": "Trade Law",
  "settings": [
    {
      "type": "select",
      "id": "check_page",
      "label": "Current page",
      "options": [
        {
          "value": "default",
          "label": "Page default"
        },
        {
          "value": "custom",
          "label": "Page inquiry information"
        }
      ],
      "default": "default"
    }
  ],
  "blocks": [
    {
      "type": "row",
      "name": "Row",
      "settings": [
        {
          "type": "text",
          "id": "left_text",
          "label": "Left Content (Text)",
          "default": "Left text..."
        },
        {
          "type": "richtext",
          "id": "right_text",
          "label": "Right Text",
          "default": "<p>Right text...</p>"
        },
        {
          "type": "image_picker",
          "id": "right_image",
          "label": "Right Image",
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Trade Law",
      "category": "t:categories.layout"
    }
  ]
}
{% endschema %}
