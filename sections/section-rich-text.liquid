      "name": "Second image",
      "limit": 1,
      "settings": [
        {
          "type": "image_picker",
          "id": "second_image",
          "label": "Image"
        },
        {
          "id": "image_url",
          "type": "url",
          "label": "t:global.button.link_url.label",
          "default": "/"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "t:sections.rich_text.presets.name",
      "category": "t:categories.storytelling",
      "blocks": [
        {
          "type": "title"
        },
        {
          "type": "content"
        },
        {
