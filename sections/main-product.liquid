                      {% if show_bar and min_stock >= current_variant.inventory_quantity %}
                        {% if overlay %}<div class="palette-{{ block.settings.color_palette }} module-color-palette m6bx" style="--m6bx_bw: 0px; --dist_a: 20px; --dist_b: var(--dist_a);">{% endif %}
